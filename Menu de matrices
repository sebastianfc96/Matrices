					for(j=0;j<col2;j++)
					{
						C[i][j]=0;
						for(k=0;k<col;k++)
						{	
							C[i][j]=C[i][j]+(A[i][k]*B[k][j]);
						}
					}
				}	
				cout<<"La multiplicacion de las matrizes es: "<<endl;
				mostrar_matriz(C,fil2,col2);
				}
				else
