}

void cargar_matriz(int A[MAX][MAX],int fil,int col)
{
	int i,j;
	for(i=0;i<fil;i++)
		{for(j=0;j<col;j++)
			{cout<<"Ingrese la matriz A["<<i<<"]["<<j<<"]";
			 cin>>A[i][j];
			}
		}

 
}
void mostrar_matriz(int A[MAX][MAX],int fil,int col)
{
	int i,j;
	for(i=0;i<fil;i++)
		{for(j=0;j<col;j++)
			{cout<<A[i][j]<<"\t";
			}
		cout<<endl;
		}
	
}
